rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // CV files - allow read by anyone, write by authenticated users
    match /cv/{fileName} {
      allow read: if true;
      allow write: if request.auth != null 
        && resource == null // Only allow new uploads
        && request.resource.size < 10 * 1024 * 1024 // Max 10MB
        && request.resource.contentType == 'application/pdf'; // Only PDF files
      allow delete: if request.auth != null;
    }
    
    // Media files - existing rules
    match /media/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Uploads - existing rules  
    match /uploads/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Branding files - existing rules
    match /branding/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }
  }
}