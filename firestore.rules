rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Contact links collection
    match /contact-links/{document} {
      // Allow read access to all users (for public display)
      allow read: if true;
      
      // Allow write access only to authenticated admin users
      // You should replace this with your actual admin user check
      allow write: if request.auth != null && 
        request.auth.token.email == "maliqalfathir04@gmail.com";
    }
    
    // Default rule - deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}